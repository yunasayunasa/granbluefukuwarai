{
  "initialState": "Title",
  "states": {
    "Title": {
      "onEnter": [
     
        {
          "type": "transitionTo",
          "params": {
            "scene": "TitleScene"
          }
        }
      ],
      "transitions": [
        {
          "event": "START_GAME",
          "to": "InGame",
          "action": {
            "type": "transitionTo",
            "params": {
              "scene": "GameScene",
              "scenario": "test"
            }
          }
        }
      ]
    },
    "InGame": {
      "onEnter": [
      
        
        {
          "type": "resumeScene"
        }
      ],
      "transitions": [
        {
          "event": "OPEN_PAUSE_MENU",
          "to": "Paused"
        },
        {
          "event": "RUN_NOVEL_OVERLAY",
          "to": "NovelOverlay"
        },
         {
    "event": "SCENE_CHANGED",  
    "to": "InGame"        
  },
  {
  "event": "CORRECT_ANSWER",
  "to": "NovelOverlay", 
  "action": {
    "type": "runNovelOverlay",
    "params": { "scenario": "scene1" } 
  }
},
{
  "event": "WRONG_ANSWER",
  "to": "NovelOverlay", 
  "action": {
    "type": "runNovelOverlay",
    "params": { "scenario": "scene2" } 
  }
}
      ]
    },
    "Paused": {
      "onEnter": [
        {
          "type": "pauseScene"
        },
        {
          "type": "openMenuOverlay",
          "params": {
            "layout":  "evidence_list"
          }
        }
      ],
      "onExit": [],
      "transitions": [
       {
  "event": "CLOSE_PAUSE_MENU",
    "to": "Judging" ,
  "action": [ 
    { "type": "closeOverlay" },
    { "type": "check_evidence_action" } 
  ]
}
      ]
    },
    "NovelOverlay": {
      "onEnter": [
        {
          "type": "pauseScene"
        },
        {
          "type": "runNovelOverlay"
        }
      ],
      "onExit": [],
      "transitions": [
        {
          "event": "END_NOVEL_OVERLAY",
          "to": "InGame",
          "action": {
            "type": "closeOverlay"
          }
        }
      ]
    },
    "GameOver": {
      "onEnter": [
        {
          "type": "transitionTo",
          "params": {
            "scene": "GameOverScene"
          }
        }
      ],
      "transitions": [
        {
          "event": "RESTART_GAME",
          "to": "InGame"
        },
        {
          "event": "RETURN_TO_TITLE",
          "to": "Title"
        }
      ]
    }
  },
  "Judging": {
  "onEnter": [
    { "type": "closeOverlay" },
    { "type": "check_evidence_action" }
  ],
  "transitions": [
    {
      "event": "CORRECT_ANSWER",
      "to": "NovelOverlay",
      "action": { "type": "runNovelOverlay", "params": { "scenario": "correct_answer_01" } }
    },
    {
      "event": "WRONG_ANSWER",
      "to": "NovelOverlay",
      "action": { "type": "runNovelOverlay", "params": { "scenario": "wrong_answer_01" } }
    },
    {
      "event": "NO_SELECTION",
      "to": "InGame" 
    }
  ]
}
}